<UserControl x:Class="ProExporter.Settings.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="HeaderStyle">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
        <StackPanel>
            <!-- Auto-Export Section -->
            <TextBlock Text="AUTO-EXPORT" Style="{StaticResource HeaderStyle}"/>
            <Separator Margin="0,0,0,8"/>
            
            <CheckBox Content="Export context when project opens" 
                      IsChecked="{Binding AutoExportEnabled, Mode=TwoWay}"/>
            
            <StackPanel Margin="20,8,0,0" IsEnabled="{Binding AutoExportEnabled}">
                <CheckBox Content="Local projects only (skip network paths)" 
                          IsChecked="{Binding AutoExportLocalOnly, Mode=TwoWay}"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="Max layers:" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding AutoExportMaxLayers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Width="60" Margin="8,0,0,0" VerticalContentAlignment="Center"/>
                    <TextBlock Text="(skip if exceeded)" VerticalAlignment="Center" Margin="8,0,0,0" 
                               Foreground="Gray" FontSize="11"/>
                </StackPanel>
            </StackPanel>

            <!-- Export Content Section -->
            <TextBlock Text="EXPORT CONTENT" Style="{StaticResource HeaderStyle}"/>
            <Separator Margin="0,0,0,8"/>
            
            <CheckBox Content="Map &amp; layout images" 
                      IsChecked="{Binding ExportImages, Mode=TwoWay}"/>
            <CheckBox Content="Notebook metadata" 
                      IsChecked="{Binding ExportNotebooks, Mode=TwoWay}"/>
            <CheckBox Content="Field schemas" 
                      IsChecked="{Binding ExportFields, Mode=TwoWay}"/>

            <!-- Actions Section -->
            <TextBlock Text="ACTIONS" Style="{StaticResource HeaderStyle}"/>
            <Separator Margin="0,0,0,8"/>
            
            <StackPanel Orientation="Horizontal">
                <Button Content="Export Now" Command="{Binding ExportNowCommand}" 
                        Padding="12,6" Margin="0,0,8,0"/>
                <Button Content="Open Export Folder" Command="{Binding OpenFolderCommand}" 
                        Padding="12,6"/>
            </StackPanel>
            
            <TextBlock Text="{Binding LastExportText}" Margin="0,12,0,0" 
                       Foreground="Gray" FontSize="11"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
